<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view2"
    android:layout_centerHorizontal="true"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation ="2dp"
    >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/first_tv_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff666666"
        android:textStyle="bold"
        android:textSize="7pt"
        android:layout_gravity="top"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="80dp"


        />



    <com.daimajia.numberprogressbar.NumberProgressBar
        android:id="@+id/progress_bar2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_tv_current"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="5dp"




        custom:progress_unreached_color="#CCCCCC"
        custom:progress_reached_color="#25A2CC"

        custom:progress_unreached_bar_height="3dp"
        custom:progress_reached_bar_height="6dp"

        custom:progress_text_size="10sp"
        custom:progress_text_color="#000000"
        custom:progress_text_offset="1dp"
        custom:progress_text_visibility="visible"

        custom:progress_max="100"
        custom:progress_current="50"

        />

    <TextView
        android:id="@+id/pages_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff666666"
        android:textSize="7pt"
        android:layout_below="@+id/progress_bar2"
        android:layout_marginLeft="80dp"
        android:text = "67/200 pages"
        android:layout_marginTop="5dp"

        />

    <ImageView
        android:id="@+id/imageView_current_books"
        android:layout_width="60dp"
        android:layout_height= "100dp"

        />



</RelativeLayout>
</android.support.v7.widget.CardView>